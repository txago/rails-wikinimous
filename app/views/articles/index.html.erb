<div class="border-bottom py-4 my-4">
  <div class="d-flex justify-content-between">
    <h1>Thiago's Articles</h1>
    <div>
      <%= link_to 'Write article', new_article_path, class: 'btn btn-outline-info' %>
    </div>
  </div>
</div>
<% @articles.each do |article| %>
<div class="border-bottom pb-2 mb-4">
  <h2 class="pb-2"><%= link_to article.title, article_path(article), class: ' text-info' %></h2>
  <p><%= article.content %></p>
</div>
<% end %>

