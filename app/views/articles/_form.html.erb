<%= form_for article do |f| %>
<div class="form-group">
  <%= f.label 'Title' %>
  <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label 'Content' %>
  <%= f.text_area :content, class: 'form-control' %>
</div>

<%= f.submit class: 'btn btn-info btn-block' %>

<% end %>
